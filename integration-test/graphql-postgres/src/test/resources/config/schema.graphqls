schema {
  query: Query
}

directive @key(
  field: String
) on ARGUMENT_DEFINITION

type Query {
  beers: [Beer!]!
  beer(identifier: ID! @key): Beer!
  breweries: [Brewery!]!
  brewery(identifier: ID! @key): Brewery!
}

type Brewery {
  identifier: ID!
  name: String!
  status: String!
  beers: [Beer]
}

type Address {
  identifier: String!
  street: String!
  city: String!
}

type Beer {
  identifier: ID!
  name: String!
  abv: String
  brewery: Brewery!
  ingredients: [Ingredient!]!
}

type Ingredient {
  identifier: ID!
  name: String!
}