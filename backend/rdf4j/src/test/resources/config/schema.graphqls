schema {
  query: Query
}

type Query {
  brewery(identifier: ID!): Brewery!
    @sparql(repository: "local", subject: "https://github.com/dotwebstack/beer/id/brewery/${identifier}")
  breweries: [Brewery!]!
    @sparql(repository: "local")
}

type Brewery {
  identifier: ID!
  name: String!
  founded: DateTime!
  address: Address
}

type Address {
  postalCode: String!
}

