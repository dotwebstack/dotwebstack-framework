schema {
  query: Query
}

type Query {
  building(identifier: ID!): Building
    @select(backend: "local", subject: "example:building/${identifier}")
  buildingReq(identifier: ID!): Building!
    @select(backend: "local", subject: "example:building/${identifier}")
}

type Building
    @shape(backend: "local", graph: "example:shapes", uri: "example:shapes#Building") {
  identifier: ID!
  height: Int!
  builtAt: DateTime!
}
