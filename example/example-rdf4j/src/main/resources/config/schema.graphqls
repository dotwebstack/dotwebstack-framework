schema {
  query: Query
}

type Query {
  beers: [Beer!]!
  brewery(identifier: ID!): Brewery
  breweryOne: Brewery
  breweries: [Brewery!]!
}

type Brewery {
  identifier: ID!
  name: String!
  beers: [Beer]
  postalAddress: Address
  visitAddress: Address
  geometry: Geometry
}

type Beer {
  identifier: ID!
  name: String!
  abv: Float!
  brewery: Brewery!
}

type Address {
  identifier: ID
  street: String
  city: String
}
