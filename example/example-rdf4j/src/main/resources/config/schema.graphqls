schema {
  query: Query
}

directive @key(
  field: String
) on ARGUMENT_DEFINITION

type Query {
  beers: [Beer!]!
  brewery(identifier: ID! @key(field : "identifier")): Brewery
  breweryOne: Brewery
  breweries: [Brewery!]!
}

type Brewery {
  identifier: ID!
  name: String!
  beers: [Beer]
  postalAddress: Address
  visitAddress: Address
}

type Beer {
  identifier: ID!
  name: String!
  abv: Float!
  brewery: Brewery!
}

type Address {
  identifier: ID
  street: String
  city: String
}
